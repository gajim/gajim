<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ManageProxies" parent="GajimAppWindow">
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" />
        </child>
        <property name="content">
          <object class="GtkBox">
            <property name="spacing">12</property>
            <child>
              <object class="GtkBox">
                <property name="width-request">200</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="vexpand">1</property>
                    <property name="focusable">1</property>
                    <property name="child">
                      <object class="GtkTreeView" id="_proxies_treeview">
                        <property name="focusable">1</property>
                        <property name="headers-visible">0</property>
                        <child internal-child="selection">
                          <object class="GtkTreeSelection" id="_treeview_selection1"/>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="css-classes">toolbar</property>
                    <child>
                      <object class="GtkButton" id="_add_proxy_button">
                        <property name="tooltip-text" translatable="yes">Add Proxy</property>
                        <property name="use-underline">1</property>
                        <property name="icon-name">lucide-plus-symbolic</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="_remove_proxy_button">
                        <property name="tooltip-text" translatable="yes">Remove Proxy</property>
                        <property name="use-underline">1</property>
                        <property name="icon-name">lucide-trash-symbolic</property>
                      </object>
                    </child>
                    <style>
                      <class name="inline-toolbar"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkGrid" id="_settings_grid">
                <property name="hexpand">1</property>
                <property name="valign">start</property>
                <property name="row-spacing">6</property>
                <property name="column-spacing">12</property>
                <child>
                  <object class="GtkEntry" id="_proxypass_entry">
                    <property name="focusable">1</property>
                    <property name="visibility">0</property>
                    <property name="input-purpose">password</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">8</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">end</property>
                    <property name="label" translatable="yes">Pass_word</property>
                    <property name="use-underline">1</property>
                    <property name="mnemonic-widget">_proxypass_entry</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">8</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="_proxyuser_entry">
                    <property name="focusable">1</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">7</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkCheckButton" id="_useauth_checkbutton">
                    <property name="label" translatable="yes">Use proxy auth_entication</property>
                    <property name="focusable">1</property>
                    <property name="halign">start</property>
                    <property name="margin-top">12</property>
                    <property name="use-underline">1</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">6</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">end</property>
                    <property name="label" translatable="yes">_Username</property>
                    <property name="use-underline">1</property>
                    <property name="mnemonic-widget">_proxyuser_entry</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">7</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="_proxyport_entry">
                    <property name="focusable">1</property>
                    <property name="placeholder-text">9050</property>
                    <property name="input-purpose">number</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">5</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">end</property>
                    <property name="label" translatable="yes">_Port</property>
                    <property name="use-underline">1</property>
                    <property name="mnemonic-widget">_proxyport_entry</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">5</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="_proxyhost_entry">
                    <property name="focusable">1</property>
                    <property name="hexpand">1</property>
                    <property name="placeholder-text" translatable="yes">example.org</property>
                    <property name="input-purpose">url</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">end</property>
                    <property name="label" translatable="yes">_Host</property>
                    <property name="use-underline">1</property>
                    <property name="mnemonic-widget">_proxyhost_entry</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">6</property>
                    <property name="label" translatable="yes">Settings</property>
                    <property name="use-markup">1</property>
                    <style>
                      <class name="title-3"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GajimDropDown" id="_proxytype_dropdown">
                    <layout>
                      <property name="column">1</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">end</property>
                    <property name="label" translatable="yes">_Type</property>
                    <property name="use-underline">1</property>
                    <property name="mnemonic-widget">_proxytype_dropdown</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="halign">end</property>
                    <property name="label" translatable="yes">_Name</property>
                    <property name="use-underline">1</property>
                    <property name="mnemonic-widget">_proxyname_entry</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="_proxyname_entry">
                    <property name="width-request">200</property>
                    <property name="focusable">1</property>
                    <property name="hexpand">1</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="margin-bottom">6</property>
                    <property name="label" translatable="yes">Proxy</property>
                    <property name="use-markup">1</property>
                    <style>
                      <class name="title-3"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                      <property name="column-span">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <style>
              <class name="window-padding"/>
            </style>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
