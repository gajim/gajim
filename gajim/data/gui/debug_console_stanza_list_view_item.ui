<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="StanzaListViewItem" parent="GtkBox">
    <property name="spacing">12</property>
      <child>
        <object class="GtkBox">
          <property name="orientation">vertical</property>
          <property name="valign">start</property>
          <property name="spacing">6</property>
          <child>
            <object class="GtkLabel" id="_stanza_type_badge">
              <property name="valign">center</property>
              <property name="width-chars">6</property>
              <style>
                <class name="badge"/>
                <class name="badge-stanza-type"/>
              </style>
            </object>
          </child>
          <child>
            <object class="GtkImage" id="_stanza_direction_icon">
              <property name="pixel-size">14</property>
              <property name="halign">center</property>
              <style>
                <class name="badge"/>
                <class name="badge-stanza-type"/>
              </style>
            </object>
          </child>
        </object>
      </child>
      <child>
        <object class="GtkSourceView" id="_stanza_source_view">
          <property name="hexpand">true</property>
          <property name="editable">false</property>
          <property name="cursor-visible">true</property>
          <style>
            <class name="debug-console-view"/>
          </style>
        </object>
      </child>
  </template>
</interface>
