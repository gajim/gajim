<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkGrid" id="info_grid">
    <property name="halign">center</property>
    <property name="row-spacing">6</property>
    <property name="column-spacing">12</property>
    <child>
      <object class="GtkLabel" id="address_label">
        <property name="halign">end</property>
        <property name="label" translatable="yes">Address</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">2</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="description_label">
        <property name="visible">0</property>
        <property name="halign">end</property>
        <property name="valign">start</property>
        <property name="label" translatable="yes">Description</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">3</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="subject_label">
        <property name="visible">0</property>
        <property name="halign">end</property>
        <property name="valign">start</property>
        <property name="label" translatable="yes">Subject</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">4</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="author_label">
        <property name="visible">0</property>
        <property name="halign">end</property>
        <property name="valign">start</property>
        <property name="label" translatable="yes">Author</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">5</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="description">
        <property name="visible">0</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="use-markup">1</property>
        <property name="wrap">1</property>
        <property name="wrap-mode">word-char</property>
        <property name="selectable">1</property>
        <property name="max-width-chars">40</property>
        <property name="xalign">0</property>
        <layout>
          <property name="column">1</property>
          <property name="row">3</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="author">
        <property name="visible">0</property>
        <property name="focusable">1</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="wrap">1</property>
        <property name="wrap-mode">word-char</property>
        <property name="selectable">1</property>
        <property name="max-width-chars">40</property>
        <property name="xalign">0</property>
        <layout>
          <property name="column">1</property>
          <property name="row">5</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="users">
        <property name="visible">0</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <layout>
          <property name="column">1</property>
          <property name="row">9</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="contact_label">
        <property name="visible">0</property>
        <property name="halign">end</property>
        <property name="valign">start</property>
        <property name="label" translatable="yes">Contact</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">7</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="logs_label">
        <property name="visible">0</property>
        <property name="halign">end</property>
        <property name="valign">start</property>
        <property name="label" translatable="yes">Discussion Logs</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">6</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="lang">
        <property name="visible">0</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="wrap">1</property>
        <property name="max-width-chars">40</property>
        <property name="xalign">0</property>
        <layout>
          <property name="column">1</property>
          <property name="row">8</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLinkButton" id="logs">
        <property name="visible">0</property>
        <property name="focusable">1</property>
        <property name="receives-default">1</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <style>
          <class name="link-button"/>
        </style>
        <layout>
          <property name="column">1</property>
          <property name="row">6</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkImage" id="users_image">
        <property name="visible">0</property>
        <property name="tooltip-text" translatable="yes">Participants</property>
        <property name="halign">end</property>
        <property name="valign">center</property>
        <property name="icon-name">system-users-symbolic</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">9</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkImage" id="lang_image">
        <property name="visible">0</property>
        <property name="tooltip-text" translatable="yes">Group Chat Language</property>
        <property name="halign">end</property>
        <property name="valign">center</property>
        <property name="icon-name">lucide-languages-symbolic</property>
        <style>
          <class name="dimmed"/>
        </style>
        <layout>
          <property name="column">0</property>
          <property name="row">8</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="contact_box">
        <property name="visible">0</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="orientation">vertical</property>
        <property name="spacing">3</property>
        <child>
          <placeholder/>
        </child>
        <layout>
          <property name="column">1</property>
          <property name="row">7</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="subject">
        <property name="visible">0</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="use-markup">1</property>
        <property name="wrap">1</property>
        <property name="wrap-mode">word-char</property>
        <property name="selectable">1</property>
        <property name="max-width-chars">40</property>
        <property name="xalign">0</property>
        <layout>
          <property name="column">1</property>
          <property name="row">4</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkImage" id="avatar_image">
        <property name="margin-bottom">12</property>
        <layout>
          <property name="column">0</property>
          <property name="row">0</property>
          <property name="column-span">2</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel" id="address">
            <property name="width-request">200</property>
            <property name="halign">start</property>
            <property name="selectable">1</property>
            <property name="ellipsize">middle</property>
            <property name="single-line-mode">1</property>
            <property name="max-width-chars">40</property>
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="address_copy_button">
            <property name="sensitive">0</property>
            <property name="focusable">1</property>
            <property name="tooltip-text" translatable="yes">Copy Address</property>
            <property name="halign">start</property>
            <property name="valign">start</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">edit-copy-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <layout>
          <property name="column">1</property>
          <property name="row">2</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="name_box">
        <property name="halign">center</property>
        <property name="orientation">vertical</property>
        <child>
          <placeholder/>
        </child>
        <layout>
          <property name="column">0</property>
          <property name="row">1</property>
          <property name="column-span">2</property>
        </layout>
      </object>
    </child>
  </object>
</interface>
