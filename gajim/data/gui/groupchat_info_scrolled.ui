<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="AdwClamp" id="info_clamp">
    <child>
      <object class="GtkBox">
        <property name="spacing">6</property>
        <property name="orientation">vertical</property>
        <style>
          <class name="px-3"/>
          <class name="py-12"/>
        </style>
        <child>
          <object class="GtkImage" id="avatar_image">
            <property name="margin-bottom">12</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="name_box">
            <property name="halign">center</property>
            <property name="orientation">vertical</property>
            <child>
              <placeholder/>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkListBox" id="info_listbox">
            <property name="selection-mode">none</property>
            <style>
              <class name="boxed-list"/>
              <class name="mt-12"/>
            </style>
            <child>
              <object class="AdwActionRow" id="address_row">
                <property name="title" translatable="yes">Address</property>
                <property name="subtitle-selectable">True</property>
                <style>
                  <class name="property"/>
                </style>
                <child type="suffix">
                  <object class="GtkButton" id="address_copy_button">
                    <property name="icon-name">lucide-copy-symbolic</property>
                    <property name="valign">center</property>
                    <property name="sensitive">False</property>
                    <property name="tooltip-text" translatable="yes">Copy Address</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="description_row">
                <property name="title" translatable="yes">Description</property>
                <property name="subtitle-selectable">True</property>
                <property name="use-markup">True</property>
                <style>
                  <class name="property"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="subject_row">
                <property name="title" translatable="yes">Subject</property>
                <property name="subtitle-selectable">True</property>
                <property name="use-markup">True</property>
                <property name="visible">False</property>
                <style>
                  <class name="property"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="author_row">
                <property name="title" translatable="yes">Subject last changed by</property>
                <property name="subtitle-selectable">True</property>
                <property name="visible">False</property>
                <style>
                  <class name="property"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="users_row">
                <property name="title" translatable="yes">Participants</property>
                <property name="visible">False</property>
                <style>
                  <class name="property"/>
                </style>
                <child type="prefix">
                  <object class="GtkImage">
                    <property name="icon-name">lucide-users-symbolic</property>
                    <property name="pixel-size">24</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="contact_row">
                <property name="title" translatable="yes">Contact</property>
                <property name="visible">False</property>
                <child type="prefix">
                  <object class="GtkImage">
                    <property name="icon-name">lucide-user-symbolic</property>
                    <property name="pixel-size">24</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="contact_box">
                    <property name="halign">start</property>
                    <property name="valign">start</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">3</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="logs_row">
                <property name="title" translatable="yes">Message History</property>
                <property name="use-markup">True</property>
                <property name="visible">False</property>
                <child type="prefix">
                  <object class="GtkImage">
                    <property name="icon-name">lucide-calendar-symbolic</property>
                    <property name="pixel-size">24</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                  </object>
                </child>
                <child type="suffix">
                  <object class="GtkLinkButton" id="logs">
                    <property name="label" translatable="yes">Website</property>
                    <property name="focusable">1</property>
                    <property name="receives-default">1</property>
                    <property name="valign">center</property>
                    <style>
                      <class name="link-button"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="lang_row">
                <property name="title" translatable="yes">Group Chat Language</property>
                <property name="visible">False</property>
                <style>
                  <class name="property"/>
                </style>
                <child type="prefix">
                  <object class="GtkImage">
                    <property name="icon-name">lucide-languages-symbolic</property>
                    <property name="pixel-size">24</property>
                    <style>
                      <class name="dimmed"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Information</property>
            <style>
              <class name="my-18"/>
            </style>
            <child>
              <object class="GtkListBox" id="features_listbox">
                <property name="selection-mode">none</property>
                <style>
                  <class name="boxed-list"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
