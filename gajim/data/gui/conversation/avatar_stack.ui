<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AvatarStack" parent="GtkMenuButton">
    <property name="name">AvatarStack</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">6</property>
        <child>
          <object class="GtkBox" id="_avatar_box">
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="_more_label">
            <style>
              <class name="dimmed"/>
              <class name="small-label"/>
              <class name="bold"/>
              <class name="pe-3"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
