<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkBox" id="box">
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <child>
      <object class="GtkLabel">
        <property name="label" translatable="1">A restart may be required for some settings to take effect</property>
        <property name="xalign">0</property>
        <attributes>
          <attribute name="foreground" value="#efef29292929"></attribute>
        </attributes>
      </object>
    </child>
    <child>
      <object class="GtkSearchEntry" id="search_entry">
        <property name="focusable">1</property>
        <property name="placeholder_text" translatable="1">Type to search for values...</property>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">1</property>
        <property name="width_request">600</property>
        <property name="height_request">300</property>
        <property name="focusable">1</property>
        <property name="hscrollbar_policy">never</property>
        <property name="child">
          <object class="GtkTreeView" id="advanced_treeview">
            <property name="focusable">1</property>
            <child internal-child="selection">
              <object class="GtkTreeSelection" id="treeview_selection">
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="1">Description</property>
            <property name="use_markup">1</property>
            <property name="xalign">0</property>
            <style>
              <class name="bold"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="description">
            <property name="height_request">40</property>
            <property name="selectable">1</property>
            <property name="wrap">1</property>
            <property name="max_width_chars">60</property>
            <property name="xalign">0</property>
            <property name="yalign">0</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="reset_button">
        <property name="label" translatable="1">_Reset Value</property>
        <property name="sensitive">0</property>
        <property name="focusable">1</property>
        <property name="tooltip_text" translatable="1">Resets value to default</property>
        <property name="halign">end</property>
        <property name="use_underline">1</property>
        <style>
          <class name="destructive-action"/>
        </style>
      </object>
    </child>
  </object>
</interface>
