<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkPopover" id="popover">
    <property name="child">
      <object class="GtkBox" id="box">
        <property name="width-request">400</property>
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Voice Message</property>
            <style>
              <class name="bold"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="error_label">
            <property name="visible">0</property>
            <property name="label" translatable="yes">An error occurred</property>
            <property name="justify">center</property>
            <style>
              <class name="error"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="progression_box">
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel" id="time_label">
                <property name="halign">center</property>
                <property name="margin-start">5</property>
                <property name="margin-end">5</property>
                <property name="label">0:00</property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="visualization_box">
                <property name="hexpand">1</property>
                <property name="height-request">40</property>
                <property name="halign">center</property>
                <property name="homogeneous">1</property>
                <child>
                  <placeholder/>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="audio_player_box">
            <property name="vexpand">1</property>
            <property name="orientation">vertical</property>
            <child>
              <placeholder/>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="record_control_box">
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkSeparator">
                <property name="margin-top">2</property>
                <property name="margin-bottom">2</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="spacing">12</property>
                <child>
                  <object class="GtkButton" id="cancel_button">
                    <property name="label" translatable="yes">_Cancel</property>
                    <property name="focusable">1</property>
                    <property name="receives-default">1</property>
                    <property name="use-underline">1</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="record_toggle_button">
                    <property name="halign">center</property>
                    <property name="hexpand">1</property>
                    <property name="focusable">1</property>
                    <property name="receives-default">1</property>
                    <property name="tooltip-text" translatable="yes">Start/Stop recording</property>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">6</property>
                        <child>
                          <object class="GtkImage" id="record_toggle_button_image">
                            <property name="icon-name">lucide-mic-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Record</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="send_button">
                    <property name="label" translatable="yes">_Send</property>
                    <property name="sensitive">0</property>
                    <property name="focusable">1</property>
                    <property name="receives-default">1</property>
                    <property name="use-underline">1</property>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <style>
          <class name="p-6"/>
        </style>
      </object>
    </property>
  </object>
</interface>
