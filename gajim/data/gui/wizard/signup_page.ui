<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="WizardSignupPage" parent="AssistantPage">
    <child>
      <object class="GtkGrid">
        <property name="halign">center</property>
        <property name="row-spacing">6</property>
        <property name="column-spacing">12</property>
        <child>
          <object class="GtkLabel">
            <property name="margin-bottom">12</property>
            <property name="label" translatable="yes">Sign Up</property>
            <style>
              <class name="title-1"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">_Please choose a provider</property>
            <property name="use-markup">1</property>
            <property name="use-underline">1</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="_sign_up_advanced_checkbutton">
            <property name="label" translatable="yes">_Advanced Settings</property>
            <property name="focusable">1</property>
            <property name="tooltip-text" translatable="yes">Proxy, custom hostname and port</property>
            <property name="halign">start</property>
            <property name="use-underline">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">5</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton" id="_sign_up_anonymously">
            <property name="label" translatable="yes">Sign up Anonymously</property>
            <property name="focusable">1</property>
            <property name="tooltip-text" translatable="yes">Note: Anonymous accounts are not possible with all providers</property>
            <property name="halign">start</property>
            <property name="valign">start</property>
            <layout>
              <property name="column">0</property>
              <property name="row">4</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkGrid" id="_sign_up_info_grid">
            <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <property name="row-spacing">6</property>
            <property name="column-spacing">12</property>
            <child>
              <placeholder/>
            </child>
            <child>
              <placeholder/>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="row">3</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <child>
              <object class="GtkComboBoxText" id="_server_comboboxtext_sign_up">
                <property name="width-request">300</property>
                <property name="has-entry">1</property>
              </object>
            </child>
            <child>
              <object class="GtkImage" id="_update_provider_list_icon">
                <property name="tooltip-text" translatable="yes">Updating provider listâ€¦</property>
                <property name="icon-name">lucide-refresh-cw-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton">
                <property name="focusable">1</property>
                <property name="receives-default">1</property>
                <property name="tooltip-text" translatable="yes">Which provider should I choose?</property>
                <property name="popover">
                  <object class="WizardServerRecommendationPopover" id="_popover" />
                </property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">lucide-info-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <placeholder/>
        </child>
      </object>
    </child>
  </template>
</interface>
