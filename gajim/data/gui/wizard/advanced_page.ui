<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="WizardAdvancedPage" parent="AssistantPage">
    <child>
      <object class="GtkGrid">
        <property name="halign">center</property>
        <property name="row-spacing">6</property>
        <property name="column-spacing">12</property>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label" translatable="yes">_Port</property>
            <property name="use-underline">1</property>
            <property name="mnemonic-widget">_custom_port_entry</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="_custom_port_entry">
            <property name="focusable">1</property>
            <property name="width-chars">6</property>
            <property name="placeholder-text">5222</property>
            <property name="input-purpose">number</property>
            <layout>
              <property name="column">1</property>
              <property name="row">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label" translatable="yes">_Hostname</property>
            <property name="use-underline">1</property>
            <property name="mnemonic-widget">_custom_host_entry</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="_custom_host_entry">
            <property name="focusable">1</property>
            <property name="placeholder-text" translatable="yes">example.org</property>
            <layout>
              <property name="column">1</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="margin-bottom">18</property>
            <property name="label" translatable="yes">Prox_y</property>
            <property name="use-underline">1</property>
            <property name="mnemonic-widget">_proxies_dropdown</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GajimDropDown" id="_proxies_dropdown">
            <property name="width-request">250</property>
            <property name="margin-bottom">18</property>
            <layout>
              <property name="column">1</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="_manage_proxies_button">
            <property name="focusable">1</property>
            <property name="tooltip-text" translatable="yes">Manage Proxies...</property>
            <property name="halign">start</property>
            <property name="valign">start</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">lucide-settings-symbolic</property>
              </object>
            </child>
            <layout>
              <property name="column">2</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="margin-bottom">12</property>
            <property name="label" translatable="yes">Advanced Settings</property>
            <style>
              <class name="title-1"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
              <property name="column-span">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GajimDropDown" id="_con_type_dropdown">
            <layout>
              <property name="column">1</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label" translatable="yes">_Type</property>
            <property name="use-underline">1</property>
            <property name="mnemonic-widget">_con_type_dropdown</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
