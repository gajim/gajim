<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AddContactContactPage" parent="AssistantPage">
    <child>
      <object class="GtkGrid" id="_contact_grid">
        <property name="halign">center</property>
        <property name="row-spacing">6</property>
        <property name="column-spacing">12</property>
        <child>
          <object class="GtkLabel">
            <property name="margin-bottom">12</property>
            <property name="label" translatable="yes">Add Contact</property>
            <style>
              <class name="title-1"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label" translatable="yes">Share Status</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkSwitch" id="_status_switch">
            <property name="focusable">1</property>
            <property name="halign">start</property>
            <property name="active">1</property>
            <layout>
              <property name="column">1</property>
              <property name="row">4</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label" translatable="yes">Group</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkComboBoxText" id="_group_combo">
            <property name="has-entry">1</property>
            <layout>
              <property name="column">1</property>
              <property name="row">3</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="halign">end</property>
            <property name="label" translatable="yes">Message</property>
            <style>
              <class name="dimmed"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="_message_entry">
            <property name="width-request">275</property>
            <property name="focusable">1</property>
            <property name="placeholder-text" translatable="yes">Say hi to your new contactâ€¦</property>
            <layout>
              <property name="column">1</property>
              <property name="row">2</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="_contact_info_button">
            <property name="focusable">1</property>
            <property name="receives-default">1</property>
            <property name="tooltip-text" translatable="yes">Show Contact Infos</property>
            <property name="halign">center</property>
            <property name="margin-bottom">6</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">lucide-user-symbolic</property>
              </object>
            </child>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
              <property name="column-span">2</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
