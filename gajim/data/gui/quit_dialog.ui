<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkBox" id="box">
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    <child>
      <object class="GtkLabel">
        <property name="label" translatable="1">Quit Gajim</property>
        <style>
          <class name="large-header"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkLabel">
        <property name="label" translatable="1">Sure you want to quit Gajim?
You won’t be able to send and receive messages if you do.

Alternatively, you can either minimize Gajim’s window, or hide it completely. Use Gajim’s system tray icon to restore the window.</property>
        <property name="justify">center</property>
        <property name="wrap">1</property>
        <property name="width-chars">48</property>
        <property name="max-width-chars">48</property>
        <style>
          <class name="dim-label"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkCheckButton" id="remember_checkbutton">
        <property name="label" translatable="1">_Remember my decision</property>
        <property name="focusable">1</property>
        <property name="halign">center</property>
        <property name="margin-top">12</property>
        <property name="use-underline">1</property>
      </object>
    </child>
    <child>
      <object class="GtkGrid">
        <property name="halign">center</property>
        <property name="margin-top">12</property>
        <property name="row-spacing">12</property>
        <property name="column-spacing">12</property>
        <child>
          <object class="GtkImage">
            <property name="icon-name">feather-eye-off-symbolic</property>
            <style>
              <class name="dim-label"/>
            </style>
            <layout>
              <property name="column">1</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkImage">
            <property name="icon-name">feather-minimize-2-symbolic</property>
            <style>
              <class name="dim-label"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="hide_button">
            <property name="label" translatable="1">_Hide (Tray Icon)</property>
            <property name="name">hide</property>
            <property name="focusable">1</property>
            <property name="receives-default">1</property>
            <property name="use-underline">1</property>
            <layout>
              <property name="column">1</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="minimize_button">
            <property name="label" translatable="1">_Minimize</property>
            <property name="name">minimize</property>
            <property name="focusable">1</property>
            <property name="receives-default">1</property>
            <property name="use-underline">1</property>
            <layout>
              <property name="column">0</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="quit_button">
            <property name="label" translatable="1">_Quit</property>
            <property name="name">quit</property>
            <property name="focusable">1</property>
            <property name="receives-default">1</property>
            <property name="use-underline">1</property>
            <style>
              <class name="destructive-action"/>
            </style>
            <layout>
              <property name="column">3</property>
              <property name="row">1</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkImage">
            <property name="icon-name">feather-log-out-symbolic</property>
            <style>
              <class name="dim-label"/>
            </style>
            <layout>
              <property name="column">3</property>
              <property name="row">0</property>
            </layout>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="orientation">vertical</property>
            <layout>
              <property name="column">2</property>
              <property name="row">0</property>
              <property name="row-span">2</property>
            </layout>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
